<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SampleConnect">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/PostSerchLayout"
        android:layout_width="413dp"
        android:layout_height="686dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/SamplePostImage"
            android:layout_width="336dp"
            android:layout_height="221dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SampleText"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/sampleUserImage"
            android:layout_width="146dp"
            android:layout_height="125dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PostSearchBox"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/SampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E3E3E3"
            android:text="ユーザアイコン"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/sampleUserImage"
            app:layout_constraintTop_toBottomOf="@+id/sampleUserImage" />

        <TextView
            android:id="@+id/TextSerch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/irohakakuc_bold"
            android:text="SELECT文で検索"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/PostSearchBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="ポストID検索"
            android:inputType="textPersonName"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextSerch" />

        <TextView
            android:id="@+id/SamplePostImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DDDDDD"
            android:text="投稿画像"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/SamplePostImage"
            app:layout_constraintStart_toStartOf="@+id/SamplePostImage"
            app:layout_constraintTop_toBottomOf="@+id/SamplePostImage" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="98dp"
            android:layout_height="62dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="検索"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextSerch" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="220dp"
            android:layout_height="53dp"
            android:layout_marginBottom="10dp"
            android:gravity="right|center_horizontal"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/sampleUserNameText"
            app:layout_constraintEnd_toEndOf="@+id/sampleUserNameText" />

        <TextView
            android:id="@+id/sampleUserNameText"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#E3E3E3"
            android:gravity="center|center_horizontal"
            android:text="ユーザ名"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/SamplePostImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/SamplePostText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="#E3E3E3"
            android:text="投稿文章"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SamplePostImageText" />

        <TextView
            android:id="@+id/PostTextMultiLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:text="ここに投稿内容の文章が入ります"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SamplePostText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>