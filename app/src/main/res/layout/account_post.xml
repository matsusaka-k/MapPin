<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/heart_text"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/heart_button2"
        tools:layout_editor_absoluteY="210dp" />

    <TextView
        android:id="@+id/smile_text"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="209dp" />

    <TextView
        android:id="@+id/time_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="424dp"
        android:text="time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heart_text"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/smile_button2"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_130850_256"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/good_button2"
        app:layout_constraintTop_toBottomOf="@+id/post_imge2" />

    <ImageButton
        android:id="@+id/good_button2"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_106310_256"
        app:layout_constraintStart_toEndOf="@+id/heart_button2"
        app:layout_constraintTop_toBottomOf="@+id/post_imge2" />

    <ImageButton
        android:id="@+id/heart_button2"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_112960_256"
        app:layout_constraintStart_toEndOf="@+id/comment2"
        app:layout_constraintTop_toBottomOf="@+id/post_imge2" />

    <ImageView
        android:id="@+id/post_imge2"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/comment2"
        android:layout_width="197dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text="comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_imge2" />

    <TextView
        android:id="@+id/good_text"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/comment2"
        tools:layout_editor_absoluteY="209dp" />

</androidx.constraintlayout.widget.ConstraintLayout>